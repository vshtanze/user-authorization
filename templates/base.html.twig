<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome to Case-Study-Test for Victor{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="btn btn-primary" href="{{ path('app_main') }}">Go to Home Page</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <span class="p-3 col-2 text-end">Welcome, {{ app.user.userIdentifier }}</span>
                        </li>
                    {% endif %}
                </ul>
                <div class="col-md text-end">
                    {% if app.user %}
                        <a class="btn btn-info" href="{{ path('app_logout') }}">Logout</a>
                    {% else %}
                        <a class="btn btn-secondary" href="{{ path('app_login') }}">Log In</a>
                    {% endif %}
                </div>
            </header>
        </div>
        {% block body %}{% endblock %}
    </body>
</html>
